{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="col-12 mb-3">
            <h1 class="mt-3">All Users</h1>
        </div>
        <div class="row headers">
            <div class="col-3">
                <h3>Id</h3>
            </div>
            <div class="col-3">
                <h3>Username</h3>
            </div>
            <div class="col-3">
                <h3>Email</h3>
            </div>
            <div class="col-3">
                <h3>Password</h3>
            </div>
        </div>
        <div class="row all-users">
            {% for user in user %}
                <div class="col-3 mt-3">
                    {{ user.id }}
                </div>
                <div class="col-3 mt-3">
                    {{ user.username }}
                </div>
                <div class="col-3 mt-3">
                    {{ user.email }}
                </div>
                <div class="col-3 mt-3 password">
                    {{ user.password }}
                </div>
                <div class="col-12 col-lg-3 offset-lg-9 buttons">
                    <button type="button" class="btn btn-danger btn-sm mt-2">
                        <a href="/delete-user/{{ user.id }}">
                            Delete User
                        </a>
                    </button>
                    <button type="button" class="btn btn-warning btn-sm mt-2">
                        <a href="/edit-user/{{ user.id }}">
                            Edit User
                        </a>
                    </button>
                </div>
            {% endfor %}
        </div>
        <div class="row mt-5">
            <div class="col-8 offset-4">
                <button type="button" class="btn btn-info btn-sm">
                    <a href="/add-user-form">
                        Add User
                    </a>
                </button>
                <br>
            </div>
        </div>
    </div>
{% endblock %}
