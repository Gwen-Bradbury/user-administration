{% extends "base" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="mt-3 header">Task</h1>
            </div>
        </div>
        <div class="row card-panel todo-list">
            <div class="col-12">
                <form method="post" action="/update/{{user.id}}">
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="name">Task Name:</label>
                        <input id="name" name="name" minlength="5" maxlength="50"
                               value="{{ user.username }}" type="text" class="validate" required>
                    </div>
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="description">Task Description:</label>
                        <input id="description" name="description" minlength="5" maxlength="50"
                               value="{{ user.email }}" type="text" class="validate" required>
                    </div>
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="description">Task Description:</label>
                        <input id="description" name="description" minlength="5" maxlength="50"
                               value="{{ user.password }}" type="text" class="validate" required>
                    </div>
                    <button type="submit" class="btn btn-info btn-sm mt-3">
                        Edit Task
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
