{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="mt-3 header">User</h1>
            </div>
        </div>
        <div class="row card-panel">
            <div class="col-12">
                <form method="post" action="/update-user/{{user.id}}">
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="username">Username:</label>
                        <input id="username" name="username" minlength="5" maxlength="50"
                               value="{{ user.username }}" type="text" class="validate" required>
                    </div>
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="email">Email:</label>
                        <input id="email" name="email" minlength="5" maxlength="50"
                               value="{{ user.email }}" type="text" class="validate" required>
                    </div>
                    <div class="input-field col-12">
                        <label class="mb-3 label" for="password">Password:</label>
                        <input id="password" name="password" minlength="5" maxlength="50"
                               value="{{ user.password }}" type="text" class="validate" required>
                    </div>
                    <button type="submit" class="btn btn-info btn-sm mt-3">
                        Edit User
                    </button>
                    <button type="submit" class="btn btn-info btn-sm mt-3">
                        All Users
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
